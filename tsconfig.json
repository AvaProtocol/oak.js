{
  "compilerOptions": {
    "incremental": true,
    "target": "esnext",
    "module": "commonjs",
    "declaration": true,
    "sourceMap": true,
    "composite": true,
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@oak-foundation/api-augment": ["./packages/api-augment/src"],
      "@oak-foundation/api-augment/*": ["./packages/api-augment/src/*"],
      "@oak-foundation/types": ["./packages/types/src"],
      "@oak-foundation/types/*": ["./packages/types/src/*"],
      "@oak-foundation/xcm-types": ["./packages/xcm-types/src"],
      "@oak-foundation/xcm-types/*": ["./packages/xcm-types/src/*"],
      "@oak-foundation/xcm-config": ["./packages/xcm-config/src"],
      "@oak-foundation/xcm-config/*": ["./packages/xcm-config/src/*"],
      "@oak-foundation/xcm-provider": ["./packages/xcm-provider/src"],
      "@oak-foundation/xcm-provider/*": ["./packages/xcm-provider/src/*"],
      "@oak-foundation/xcm-sdk": ["./packages/xcm-sdk/src"],
      "@oak-foundation/xcm-sdk/*": ["./packages/xcm-sdk/src/*"]
    }
  }
}
